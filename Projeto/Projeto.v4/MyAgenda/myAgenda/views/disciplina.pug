extends layout

block content
  style
      body {font-family: "Raleway", Arial, sans-serif}
      .w3-row img {margin-bottom: -8px}
      
    
  
  body(class="w3-light-grey w3-padding-64 w3-center")
    
         
    
    img(src='/images/Logo.png' class="w3-left" )
    br
    input(class="w3-input w3-border w3-padding w3-right w3-light-grey" style="width:30%" type="text" placeholder="Pesquise por Nome de Ficheiro.." id="myInput" onkeyup="myFunction()")

    br
    br
    h1 Curso Engenharia Informática 
    br
    br
    
    .w3-card-4
      header.w3-container.w3-dark-grey
        h1 Lista de ficheiros da disciplina 
        
      if(lista.length>0)
                table.w3-tiny.w3-card.w3-table-all(id='myTable')
                    tr
                        th Autor
                        th Disciplina
                        th Titulo
                        th Descrição
                        th Detalhes do Ficheiro
                    each f in lista
                        tr
                          td=f.email
                          td=f.disciplina
                          td=f.titulo
                          td=f.desc
                          //td=f.data
                          //if (lista2.email==f.email)
                            td
                              form.delete-meeting-form(method='POST' action='/api/ficheiros/apagar/'+f._id)
                                input.button.button--delete(type='submit' class="w3-button w3-btn w3-round-large w3-border w3-dark-grey " value='DELETE' onclick='return confirm("Tem a certeza que pretende eliminar o ficheiro? ")')
                          td
                            button.w3-button(id = f._id,onclick="VerDetalhes('"+f._id+"')") Detalhes                              
                              
      else
        p Não tem nenhum ficheiro armazenado

    
      script.
        function myFunction() {
          var input, filter, table, tr, td, i;
          input = document.getElementById("myInput");
          filter = input.value.toUpperCase();
          table = document.getElementById("myTable");
          tr = table.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[2];
            if (td) {
              txtValue = td.textContent || td.innerText;
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        }
              
            
          
        
      
  
