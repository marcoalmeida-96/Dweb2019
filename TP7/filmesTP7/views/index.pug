extends layout

block content
  
  .w3-card-4
            header.w3-container
                h1 Criar novo Filme
            .w3-container
                form.w3-container(action='/filmes' method='POST' id='form1')
                    label
                        b Titulo
                    input.w3-input.w3-border.w3-light-grey(type='text' name='title' id='title')
                    label
                        b Ano
                    input.w3-input.w3-border.w3-light-grey(type='text' name='year' id='year')
                    input.w3-btn.w3-blue-grey(name='enviar' type='submit' value='Enviar')
                    hr
            .w3-card-4
                h1 Filmes
                table.w3-table-all
                    tr  
                        
                        th Titulo
                        th Ano
                    each a in lista
                        tr
                            
                            td= a.title
                            td= a.year
                            td
                                
                                button.w3-button.w3-circle.w3-blue-grey(onclick="apagaItem('" + a.id + "')") Apagar
                                button.w3-button.w3-circle.w3-blue-grey(onclick="editarItem('" + a.id + "')") Editar/Ver
            footer.w3-container.w3-teal
                address Gerado por Marco Almeida