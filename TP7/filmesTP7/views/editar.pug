extends layout

block content
  h1 Filmes
  .w3-card-4
            header.w3-container
                h3 Novo filme
            .w3-container
                form.w3-container(action='/filmes/edit' method='POST' id='form1')
                    label
                        b Id
                    input.w3-input.w3-border.w3-light-grey(type='text' name='id' id='id' value=filme.id)
                    label
                        b Titulo
                    input.w3-input.w3-border.w3-light-grey(type='text' name='title' id='title' value=filme.title)
                    label
                        b Ano
                    input.w3-input.w3-border.w3-light-grey(type='text' name='year' id='year' value=filme.year)
                    label
                        b Cast
                    each c in filme.cast
                        input.w3-input.w3-border.w3-light-grey(type='text' name='cast' id='cast' value=c)
                    label
                        b Genero
                    each g in filme.genres
                        input.w3-input.w3-border.w3-light-grey(type='text' name='genres' id='genres' value=g)
                    input.w3-btn.w3-blue-grey(name='editar' type='submit' value='Editar')
            footer.w3-container.w3-teal
                address Gerado por Marco Almeida