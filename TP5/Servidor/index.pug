extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Criar nova Tarefa
            .w3-container
                form.w3-container(action='/tarefa' method='POST')
                    label.w3-teal
                        b Tarefa
                    input.w3-input.w3-border.w3-light-grey(type='text' name='tarefa')
                    label.w3-teal
                        b Data Limite
                    input.w3-input.w3-border.w3-light-grey(type='date' name='data_limite')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container 
            table.w3-table-all
                tr
                    th Tarefa
                    th Data Limite
                each al in lista
                    tr
                        td=al.tarefa
                        td=al.data_limite
            